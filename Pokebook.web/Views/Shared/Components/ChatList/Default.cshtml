@model AllChatsForUserVM
@{
    ViewData["Title"] = "Default";
}


    <h2>Current chats</h2>
    <div class="list-group">
        @{
            if (Model.ListChats.Count() == 0)
            {
                <p>No current chats</p>
            }
            else
            {
                foreach (var chat in Model.ListChats)
                {
                    <a asp-action="ChatWithName" asp-controller="Chat" asp-route-chatId="@(chat.Id)" class="list-group-item list-group-item-action">
                        @(chat.Name)
                    </a>
                }
            }
        }
    </div>
