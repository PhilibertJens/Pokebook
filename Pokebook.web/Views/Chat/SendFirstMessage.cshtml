@model ChatSendFirstMessageVM
@{
    ViewData["Title"] = "SendFirstMessage";
}

<h2>Send your first message to @Model.Receiver.UserName</h2>

<div class="row chat">
    <div class="col-md-4">
        <vc:chat-list></vc:chat-list>
    </div>
    <div class="col-md-8 firstMessage">
        <h2>Your message</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input asp-for="Text" class="form-control">
                <span asp-validation-for="Text" class="text-danger"></span>
                <button type="submit" class="firstMessageButton">
                    <img src="~/images/send.png" width="40" />
                </button><br />
            </div>
        </form>
    </div>
</div>